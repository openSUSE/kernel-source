+	if (complain && new_profile == null_complain_profile) {
+		LOG_HINT(new_profile, GFP_ATOMIC, HINT_CHGPROF,
+			"pid=%d\n",
+			current->pid);
+	}
+
+cleanup:
+	aa_put_name_buffer(buffer);
+	if (IS_ERR(new_profile))
+		return PTR_ERR(new_profile);
+	aa_put_profile(new_profile);
+	return 0;
+}
