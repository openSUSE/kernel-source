+++ b/fs/namei.c	2008-04-06 13:39:15.000000000 -0400
@@ -2090,7 +2090,7 @@ void dentry_unhash(struct dentry *dentry
 	spin_unlock(&dcache_lock);
 }
 
-int vfs_rmdir(struct inode *dir, struct dentry *dentry)
+int vfs_rmdir(struct inode *dir, struct dentry *dentry,struct vfsmount *mnt)
 {
 	int error = may_delete(dir, dentry, 1);
 
@@ -2154,7 +2154,7 @@ static long do_rmdir(int dfd, const char
 	error = PTR_ERR(dentry);
