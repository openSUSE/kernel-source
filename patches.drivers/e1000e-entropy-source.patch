+	err = request_irq(adapter->pdev->irq, &e1000_intr, irq_flags,
 			  netdev->name, netdev);
 	if (err)
 		e_err("Unable to allocate interrupt, Error: %d\n", err);
--- a/drivers/net/e1000e/param.c
