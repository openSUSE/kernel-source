+struct gcry_mpi *mpi_copy( struct gcry_mpi * a )
+{
+    int i; 
+    struct gcry_mpi *b;
+
+    if( a && (a->flags & 4) ) {
+        void *p = gcry_xmalloc( (a->sign+7)/8 );
+        memcpy( p, a->d, (a->sign+7)/8 );
+        b = gcry_mpi_set_opaque( NULL, p, a->sign );
