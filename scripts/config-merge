#!/usr/bin/perl -w
use strict;
use Fcntl 'SEEK_SET';

if (@ARGV < 2) {
	print STDERR "Usage: $0 <config1> <config2>\n";
	print STDERR "Merge kernel config files config1 and config2. " .
		     "Differences will be selected from config2.\n";
	exit 1;
}

my %config;

open CONFIG1, $ARGV[0]
    or die $ARGV[0] . ": $!\n";
while (<CONFIG1>) {
    next unless /^(CONFIG_[A-Za-z0-9_]+)/ || /^# (CONFIG_[A-Za-z0-9_]+) is not set/;
    $config{$1} = $_;
}

open CONFIG2, $ARGV[1]
    or die $ARGV[1] . ": $!\n";
while (<CONFIG2>) {
    next unless /^(CONFIG_[A-Za-z0-9_]+)/ || /^# (CONFIG_[A-Za-z0-9_]+) is not set/;
    $config{$1} = $_;
}
close(CONFIG2);

seek(CONFIG1, 0, SEEK_SET);
while (<CONFIG1>) {
    if (/^(CONFIG_[A-Za-z0-9_]+)/ || /^# (CONFIG_[A-Za-z0-9_]+) is not set/) {
	print $config{$1};
	delete $config{$1};
    } else {
	print;
    }

}
close(CONFIG1);

foreach my $value (values(%config)) {
	print $value;
}
