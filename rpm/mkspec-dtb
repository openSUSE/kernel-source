# DTB packages names
my @armv6l_package_list = (
     ['dtb-bcm2835',   'bcm2835*.dts',   "Raspberry Pi 1 (A+, B, B+)"],
);

# DTB packages names
my @aarch64_package_list = (
     ['dtb-allwinner',       'allwinner/*.dts',        "Allwinner based arm64 systems"],
     ['dtb-altera',          'altera/*.dts',           "Altera based arm64 systems"],
