-	void (*gen_cmdline)(struct nvkm_msgqueue *, void *);
-};
-
-struct nvkm_msgqueue_func {
-	const struct nvkm_msgqueue_init_func *init_func;
-	void (*dtor)(struct nvkm_msgqueue *);
-};
-
-/**
