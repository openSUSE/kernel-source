 }
@@ -1981,8 +1982,12 @@ static void iavf_watchdog_task(struct wo
 	struct iavf_hw *hw = &adapter->hw;
 	u32 reg_val;
 
-	if (!mutex_trylock(&adapter->crit_lock))
