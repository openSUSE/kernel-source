 			if (!drm_dp_mst_atomic_check(state)) {
 				vars[next_index].bpp_x16 = bpp_x16_from_pbn(params[next_index], vars[next_index].pbn);
 			} else {
@@ -757,7 +757,7 @@ static void increase_dsc_bpp(struct drm_atomic_state *state,
