 	}
 #endif
 	for_each_oldnew_crtc_in_state(state, crtc, old_crtc_state, new_crtc_state, i) {
@@ -11582,6 +11585,7 @@ static int amdgpu_dm_atomic_check(struct drm_device *dev,
