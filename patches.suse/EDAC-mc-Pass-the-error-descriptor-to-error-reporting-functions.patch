 	if (mci->scrub_mode == SCRUB_SW_SRC) {
 		/*
@@ -1040,51 +1033,46 @@ static void edac_ce_error(struct mem_ctl_info *mci,
 			* be scrubbed.
 			*/
 		remapped_page = mci->ctl_page_to_phys ?
-			mci->ctl_page_to_phys(mci, page_frame_number) :
