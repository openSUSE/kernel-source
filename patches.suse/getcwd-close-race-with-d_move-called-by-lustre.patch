+static inline bool d_unlinked_safe(struct dentry *de)
+{
+	bool ret;
+	ret = d_unlinked(de);
+	if (unlikely(ret)) {
+		/* Maybe racing with d_move called from lustre */
+		spin_lock(&de->d_lock);
+		ret = d_unlinked(de);
+		spin_unlock(&de->d_lock);
+	}
+	return ret;
