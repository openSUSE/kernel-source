 drivers/gpu/drm/nouveau/nvkm/engine/disp/dp.h |  12 ++
 2 files changed, 114 insertions(+), 12 deletions(-)

diff --git a/drivers/gpu/drm/nouveau/nvkm/engine/disp/dp.c b/drivers/gpu/drm/nouveau/nvkm/engine/disp/dp.c
