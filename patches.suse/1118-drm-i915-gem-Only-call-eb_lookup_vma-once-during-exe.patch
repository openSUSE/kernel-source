 		u32 handle = eb->exec[i].handle;
 		struct i915_lut_handle *lut;
@@ -783,25 +778,19 @@ static int eb_lookup_vmas(struct i915_execbuffer *eb)
 		i915_gem_object_unlock(obj);
 
