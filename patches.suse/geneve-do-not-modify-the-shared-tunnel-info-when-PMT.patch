+++ b/drivers/net/geneve.c
@@ -913,8 +913,16 @@ static int geneve_xmit_skb(struct sk_buf
 
 		info = skb_tunnel_info(skb);
 		if (info) {
-			info->key.u.ipv4.dst = fl4.saddr;
-			info->key.u.ipv4.src = fl4.daddr;
+			struct ip_tunnel_info *unclone;
