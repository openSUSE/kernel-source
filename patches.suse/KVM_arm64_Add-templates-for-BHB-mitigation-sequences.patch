 #define ARM64_HAS_ARMv8_4_TTL			50
 #define ARM64_HAS_TLB_RANGE			51
 #define ARM64_WORKAROUND_1742098		52
+#define ARM64_SPECTRE_BHB			53
 
 
-#define ARM64_NCAPS				53
