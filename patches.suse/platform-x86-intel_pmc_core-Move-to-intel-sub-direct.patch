-	u8 mode_order[LPM_MAX_NUM_MODES];
-	u32 lpm_pri;
-	u32 lpm_en;
-	int mode, i, p;
-
-	/* Use LPM Maps to indicate support for substates */
-	if (!pmcdev->map->lpm_num_maps)
-		return;
-
-	lpm_en = pmc_core_reg_read(pmcdev, pmcdev->map->lpm_en_offset);
-	pmcdev->num_lpm_modes = hweight32(lpm_en);
