-	/*
-	 * Loop through all modes from lowest to highest priority,
-	 * and capture all enabled modes in order
-	 */
-	i = 0;
-	for (p = LPM_MAX_NUM_MODES - 1; p >= 0; p--) {
-		int mode = pri_order[p];
-
-		if (!(BIT(mode) & lpm_en))
-			continue;
-
-		pmcdev->lpm_en_modes[i++] = mode;
-	}
