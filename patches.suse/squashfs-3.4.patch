+#define SIZE 256
+
+static inline int calculate_skip(int blocks) {
+	int skip = (blocks - 1) / ((SQUASHFS3_SLOTS * SQUASHFS3_META_ENTRIES + 1) * SQUASHFS3_META_INDEXES);
+	return skip >= 7 ? 7 : skip + 1;
+}
