+static char *bh_state_vals[] = {
+	"Uptodate", "Dirty", "Lock", "Req",
+	"Mapped", "New", "Async_read", "Async_write",
+	"Delay", "Boundary", "Write_EIO", "Ordered", "Eopnotsupp",
+	"Private",
+	NULL };
