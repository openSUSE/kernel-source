+	 * General Stack Traceback functions.
+	 */
+
+#if	defined(__i386__) || defined(__x86_64__)
+extern int kdb_get_next_ar(kdb_machreg_t, kdb_machreg_t,
+			   kdb_machreg_t, kdb_machreg_t,
+			   kdb_machreg_t,
+			   kdb_ar_t *, kdb_symtab_t *);
+#endif
