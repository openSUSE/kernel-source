@@ -666,6 +692,10 @@ static int __maybe_unused tegra_i2c_runt
 	struct tegra_i2c_dev *i2c_dev = dev_get_drvdata(dev);
 
 	clk_disable(i2c_dev->div_clk);
+
+	if (i2c_dev->slow_clk)
