 	struct intel_gt *gt = rps_to_gt(rps);
@@ -224,17 +310,23 @@
 
 			err = max_granted_freq(slpc, rps, &max_act_freq);
 			break;
-		}
 
-		pr_info("Max actual frequency for %s was %d\n",
-			engine->name, max_act_freq);
+		case SLPC_POWER:
