 drivers/gpu/drm/amd/display/dc/core/dc_link.c | 31 ++++++++++++
 drivers/gpu/drm/amd/display/dc/dc.h           |  5 ++
 drivers/gpu/drm/amd/display/dc/dc_types.h     |  7 +++
