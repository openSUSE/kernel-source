--- a/net/sched/sch_sfq.c
+++ b/net/sched/sch_sfq.c
@@ -660,8 +660,6 @@ static int sfq_change(struct Qdisc *sch,
 		if (!p)
 			return -ENOMEM;
 	}
-	if (ctl->limit == 1)
-		return -EINVAL;
 
 	sch_tree_lock(sch);
 
@@ -702,6 +700,11 @@ static int sfq_change(struct Qdisc *sch,
 		limit = min_t(u32, ctl->limit, maxdepth * maxflows);
 		maxflows = min_t(u32, maxflows, limit);
 	}
+	if (limit == 1) {
+		sch_tree_unlock(sch);
+		kfree(p);
+		return -EINVAL;
+	}
 
 	/* commit configuration */
 	q->limit = limit;
