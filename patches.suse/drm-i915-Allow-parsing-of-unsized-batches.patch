 }
 
 static int eb_create(struct i915_execbuffer *eb)
@@ -2518,6 +2519,9 @@ i915_gem_do_execbuffer(struct drm_device
 		goto err_vma;
 	}
 
+	if (eb.batch_len == 0)
+		eb.batch_len = eb.batch->size - eb.batch_start_offset;
+
