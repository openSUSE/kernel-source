 drivers/gpu/drm/i915/gem/i915_gem_execbuffer.c |    2 +-
 drivers/gpu/drm/i915/i915_gem.c                |    4 ++--
 include/drm/drm_mm.h                           |    7 ++++---
 4 files changed, 16 insertions(+), 15 deletions(-)

