---
 drivers/video/fbdev/core/fbcon.c |    6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

--- a/drivers/video/fbdev/core/fbcon.c
+++ b/drivers/video/fbdev/core/fbcon.c
@@ -2493,7 +2493,7 @@ static int fbcon_set_font(struct vc_data
 	unsigned charcount = font->charcount;
 	unsigned int w = font->width;
 	unsigned int h = font->height;
-	unsigned int size;
+	unsigned int size, alloc_size;
 	int i, csum;
 	u8 *new_data, *data = font->data;
 	unsigned int pitch = PITCH(font->width);
@@ -2526,10 +2526,10 @@ static int fbcon_set_font(struct vc_data
 		return -EINVAL;
 
 	/* Check for overflow in allocation size calculation */
-	if (check_add_overflow(FONT_EXTRA_WORDS * sizeof(int), size, &size))
+	if (check_add_overflow(FONT_EXTRA_WORDS * sizeof(int), size, &alloc_size))
 		return -EINVAL;
 
-	new_data = kmalloc(size, GFP_USER);
+	new_data = kmalloc(alloc_size, GFP_USER);
 
 	if (!new_data)
 		return -ENOMEM;
