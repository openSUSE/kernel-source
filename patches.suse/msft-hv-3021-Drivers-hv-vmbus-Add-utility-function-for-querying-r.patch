diff --git a/drivers/hv/hyperv_vmbus.h b/drivers/hv/hyperv_vmbus.h
--- a/drivers/hv/hyperv_vmbus.h
+++ b/drivers/hv/hyperv_vmbus.h
@@ -417,6 +417,18 @@ static inline bool hv_is_perf_channel(struct vmbus_channel *channel)
 	return vmbus_devs[channel->device_id].perf_device;
 }
 
+static inline size_t hv_dev_ring_size(struct vmbus_channel *channel)
+{
+	size_t pref_ring_size = 0;
+
+	if (vmbus_devs[channel->device_id].dev_type == HV_UNKNOWN)
+		pref_ring_size = 0x11000U;
+	else if (vmbus_devs[channel->device_id].dev_type == HV_FCOPY)
+		pref_ring_size = 0x4000U;
+
+	return pref_ring_size;
+}
