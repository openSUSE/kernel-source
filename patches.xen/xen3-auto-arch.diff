+	if (xen_start_info.flags & SIF_INITDOMAIN) {
+		dom0_op_t op;
+		op.cmd = DOM0_PHYSINFO;
+		if ((HYPERVISOR_dom0_op(&op) == 0) &&
+		    (op.u.physinfo.total_pages > 0x7ffff))
+			swiotlb = 1;
+	}
