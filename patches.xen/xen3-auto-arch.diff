+void stop_hz_timer(void)
+{
+	unsigned int cpu = smp_processor_id();
+	unsigned long j;
+
+	/* s390 does this /before/ checking rcu_pending(). We copy them. */
+	cpu_set(cpu, nohz_cpu_mask);
