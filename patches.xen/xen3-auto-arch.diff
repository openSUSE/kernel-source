+		TRAP_INSTR					\
+		: "=a" (__res), "=b" (__ign1), "=c" (__ign2)	\
+		: "0" (__HYPERVISOR_##name), "1" ((long)(a1)),	\
+		"2" ((long)(a2))				\
+		: "memory" );					\
+	(type)__res;						\
+})
+
