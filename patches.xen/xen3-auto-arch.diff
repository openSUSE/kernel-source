+}
+
+static inline int
+HYPERVISOR_dom_mem_op(
+	unsigned int op, unsigned long *extent_list,
+	unsigned long nr_extents, unsigned int extent_order)
+{
+	return _hypercall5(int, dom_mem_op, op, extent_list,
+			   nr_extents, extent_order, DOMID_SELF);
