 include/asm-powerpc/rtas.h       |    2 +-
 4 files changed, 4 insertions(+), 4 deletions(-)

Index: linux-2.6.26/arch/powerpc/kernel/irq.c
===================================================================
--- linux-2.6.26.orig/arch/powerpc/kernel/irq.c
+++ linux-2.6.26/arch/powerpc/kernel/irq.c
@@ -423,7 +423,7 @@ void do_softirq(void)
 #ifdef CONFIG_PPC_MERGE
 
 static LIST_HEAD(irq_hosts);
-static DEFINE_SPINLOCK(irq_big_lock);
+static DEFINE_RAW_SPINLOCK(irq_big_lock);
 static DEFINE_PER_CPU(unsigned int, irq_radix_reader);
 static unsigned int irq_radix_writer;
 struct irq_map_entry irq_map[NR_IRQS];
Index: linux-2.6.26/arch/powerpc/kernel/rtas.c
===================================================================
--- linux-2.6.26.orig/arch/powerpc/kernel/rtas.c
+++ linux-2.6.26/arch/powerpc/kernel/rtas.c
@@ -40,7 +40,7 @@
 #include <asm/atomic.h>
 
 struct rtas_t rtas = {
-	.lock = SPIN_LOCK_UNLOCKED
+	.lock = RAW_SPIN_LOCK_UNLOCKED(lock)
 };
 EXPORT_SYMBOL(rtas);
 
