 	u64 sum = 0;
 	struct timespec boottime;
@@ -514,7 +515,7 @@ static int show_stat(struct seq_file *p, void *v)
 	if (!per_irq_sum)
 		return -ENOMEM;
 
-	user = nice = system = idle = iowait =
+	user_rt = user = nice = system_rt = system = idle = iowait =
