Index: linux-2.6.22/security/selinux/selinuxfs.c
===================================================================
--- linux-2.6.22.orig/security/selinux/selinuxfs.c	2007-07-24 08:57:36.000000000 +0200
+++ linux-2.6.22/security/selinux/selinuxfs.c	2007-07-24 08:57:36.000000000 +0200
@@ -967,9 +967,9 @@ static void sel_remove_bools(struct dent
 
 	spin_unlock(&dcache_lock);
 
-	file_list_lock();
-	list_for_each(p, &sb->s_files) {
-		struct file * filp = list_entry(p, struct file, f_u.fu_list);
+	barrier_lock(&sb->s_barrier);
+	filevec_add_drain_all();
+	lock_list_for_each_entry(filp, &sb->s_files, f_u.fu_llist) {
 		struct dentry * dentry = filp->f_path.dentry;
 
 		if (dentry->d_parent != de) {
@@ -977,6 +977,7 @@ static void sel_remove_bools(struct dent
 		}
 		filp->f_op = NULL;
 	}
+	barrier_unlock(&sb->s_barrier);
 }
 
