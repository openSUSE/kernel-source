diff --git a/drivers/serial/8250.c b/drivers/serial/8250.c
index 9ccc563..cdd3ec1 100644
--- a/drivers/serial/8250.c
+++ b/drivers/serial/8250.c
@@ -2557,14 +2557,10 @@ serial8250_console_write(struct console *co, const char *s, unsigned int count)
 
 	touch_nmi_watchdog();
 
-	local_irq_save(flags);
