-/* powerpc clocksource code */
+/* PowerPC clocksource code */
 
 #include <linux/clocksource.h>
+
 static cycle_t timebase_read(void)
 {
 	return (cycle_t)get_tb();
 }
 
 struct clocksource clocksource_timebase = {
-	.name = "timebase",
-	.rating = 200,
-	.read = timebase_read,
-	.mask = (cycle_t)-1,
-	.mult = 0,
-	.shift = 22,
+	.name		= "timebase",
