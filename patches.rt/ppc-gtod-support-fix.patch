--- linux-2.6.23.1-rt11.orig/arch/powerpc/kernel/time.c
+++ linux-2.6.23.1-rt11/arch/powerpc/kernel/time.c
@@ -529,7 +529,7 @@ void timer_interrupt(struct pt_regs * re
 		if (per_cpu(last_jiffy, cpu) >= tb_next_jiffy) {
 			tb_last_jiffy = tb_next_jiffy;
 			do_timer(1);
-			timer_recalc_offset(tb_last_jiffy);
+			/*timer_recalc_offset(tb_last_jiffy);*/
 			timer_check_rtc();
 		}
 		write_sequnlock(&xtime_lock);
@@ -926,22 +926,23 @@ void div128_by_32(u64 dividend_high, u64
 
 }
 
