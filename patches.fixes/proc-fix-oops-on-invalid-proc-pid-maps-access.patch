---
 fs/proc/task_mmu.c |    3 ++-
 1 files changed, 2 insertions(+), 1 deletions(-)

Index: linux-2.6.38-stable/fs/proc/task_mmu.c
===================================================================
--- linux-2.6.38-stable.orig/fs/proc/task_mmu.c
+++ linux-2.6.38-stable/fs/proc/task_mmu.c
@@ -180,7 +180,8 @@ static void m_stop(struct seq_file *m, v
 	struct proc_maps_private *priv = m->private;
 	struct vm_area_struct *vma = v;
 
-	vma_stop(priv, vma);
+	if (!IS_ERR(vma))
+		vma_stop(priv, vma);
 	if (priv->task)
 		put_task_struct(priv->task);
 }
